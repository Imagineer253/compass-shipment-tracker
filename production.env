# Production Environment Configuration for ngrok hosting

# Flask Configuration
SECRET_KEY=your-super-secret-production-key-here
FLASK_ENV=production
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///instance/compass_production.db

# Email Configuration (Gmail recommended)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Upload Configuration
UPLOAD_FOLDER=compass/static/uploads

# Security Configuration
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=false  # Set to true if using HTTPS with ngrok
SESSION_COOKIE_HTTPONLY=true

# Admin Configuration
ADMIN_EMAIL=admin@compass.com
ADMIN_PASSWORD=SecureAdminPassword123!
